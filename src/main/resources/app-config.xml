    <!-- Fabryka fasolek -->
    <bean id="engineBeanFactory" class="wrup.spring.example.entities.engines.EngineBeanFactory" />

    <bean id="engine"
          class="wrup.spring.example.entities.engines.EngineBeanFactory"
          factory-method="getEngine" factory-bean="engineBeanFactory">
        <constructor-arg value="2" />
    </bean>

    <bean id="car" class="wrup.spring.example.entities.Car">
        <property name="engine" ref="engine" />
    </bean>



