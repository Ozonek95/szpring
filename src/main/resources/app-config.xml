<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd ">

    <context:component-scan base-package="wrup.spring.example" />

    <!-- bean definitions here -->

    <!-- injecting bean using setter method -->

    <!--<bean id="engine" class="wrup.spring.example.entities.Diesel"/> -->
    <!--<bean id="car" class="wrup.spring.example.entities.Car">-->
    <!--<property name="engine" ref="engine"/>-->
    <!--</bean>-->

    <!-- injecting bean using constructor -->
    <!--<bean id="engine" class="wrup.spring.example.entities.Diesel"/> -->
    <!--<bean id="car" class="wrup.spring.example.entities.Car">-->
    <!--<constructor-arg ref="engine"/>-->
    <!--</bean>-->

    <!-- injecting bean using bean factory -->
    <bean id="engineBeanFactory" class="wrup.spring.example.entities.EngineBeanFactory" />

    <bean id="engine"
          class="wrup.spring.example.entities.EngineBeanFactory"
          factory-method="getEngine" factory-bean="engineBeanFactory">
        <constructor-arg value="2" />
    </bean>

    <bean id="car" class="wrup.spring.example.entities.Car">
        <property name="engine" ref="engine" />
    </bean>

</beans>